<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/verde">

    <EditText
        android:id="@+id/edNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Insira seu nome"
        android:textSize="30sp"
        android:textAlignment="center"
        android:padding="20dp"
        android:textColorHint="@color/laranja"/>

    <EditText
        android:id="@+id/edUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Insira seu login"
        android:textSize="30sp"
        android:layout_below="@id/edNome"
        android:textAlignment="center"
        android:padding="20dp"
        android:textColorHint="@color/laranja"/>

    <EditText
        android:id="@+id/edPass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edUser"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Insira sua senha "
        android:textSize="30sp"
        android:textAlignment="center"
        android:padding="20dp"
        android:textColorHint="@color/laranja"/>

    <EditText
        android:id="@+id/edPass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edPass1"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Repita sua senha"
        android:textSize="30sp"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColorHint="@color/laranja" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edPass2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="160dp"
        android:backgroundTint="@color/roxo"
        android:padding="10dp"
        android:text="Salvar"
        android:textColor="#000000"
        android:textSize="20dp" />

</RelativeLayout>